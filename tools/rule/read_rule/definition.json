    ],
    "properties": {
      "rule_id": {
        "type": "string",
        "description": "Rule identifier to load",
        "pattern": "^[a-z0-9-]+$"
      },
      "include_metadata": {
        "type": "boolean",
        "description": "Include usage statistics and version history (default: true)",
        "default": true
      }
    }
  },
  "use_tool_context": true,
