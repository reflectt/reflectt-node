{
  "id": "export_cost_data",
  "name": "export_cost_data",
  "description": "Export cost data to CSV or JSON for external analysis in Excel, Google Sheets, or BI tools. Includes conversation details, costs, tokens, and timestamps.",
  "category": "cost",
  "input_schema": {
    "type": "object",
    "properties": {
      "user_id": {
        "type": "string",
        "description": "User ID to export data for (optional - defaults to current user)"
      },
      "date_from": {
        "type": "string",
        "description": "Start date in YYYY-MM-DD format"
      },
      "date_to": {
        "type": "string",
        "description": "End date in YYYY-MM-DD format"
      },
      "format": {
        "type": "string",
        "enum": [
          "json",
          "csv"
        ],
        "description": "Export format (default: csv)",
        "default": "csv"
      },
      "group_by": {
        "type": "string",
        "enum": [
          "day",
          "week",
          "conversation"
        ],
        "description": "How to group the data (default: conversation)",
        "default": "conversation"
      }
    },
    "required": [
      "date_from",
      "date_to"
    ]
  },
  "function_name": "export_cost_data"
}
