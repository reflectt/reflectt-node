{
  "id": "compress_document",
  "name": "Compress Document",
  "description": "Reduce PDF file size while maintaining quality. Compresses images, removes metadata, and optimizes fonts. Configurable quality levels for different use cases.",
  "category": "document",
  "function_name": "compress_document",
  "parameters": {
    "type": "object",
    "required": [
      "document_source"
    ],
    "properties": {
      "document_source": {
        "type": "string",
        "description": "File path to PDF document"
      },
      "document_type": {
        "type": "string",
        "enum": [
          "pdf"
        ],
        "default": "pdf",
        "description": "Document type (currently PDF only)"
      },
      "output_path": {
        "type": "string",
        "description": "Optional: Where to save compressed document"
      },
      "compression_options": {
        "type": "object",
        "description": "Compression options",
        "properties": {
          "quality": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high"
            ],
            "default": "medium",
            "description": "Quality level (low=max compression, high=min compression)"
          },
          "compress_images": {
            "type": "boolean",
            "default": true,
            "description": "Compress embedded images"
          },
          "image_quality": {
            "type": "number",
            "minimum": 1,
            "maximum": 100,
            "default": 75,
            "description": "Image quality (1-100)"
          },
          "remove_metadata": {
            "type": "boolean",
            "default": false,
            "description": "Remove document metadata"
          },
          "optimize_fonts": {
            "type": "boolean",
            "default": true,
            "description": "Optimize embedded fonts"
          }
        }
      }
    }
  },
  "use_tool_context": true,
  "examples": [],
  "tags": [
    "document",
    "pdf",
    "compress",
    "optimize",
    "reduce-size"
  ],
  "version": "1.0.0",
  "dependencies": []
}