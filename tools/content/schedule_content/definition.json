{
  "function_name": "schedule_content",
  "description": "Schedule content publication to platforms at specific times",
  "category": "content",
  "parameters": {
    "type": "object",
    "properties": {
      "content_id": {
        "type": "string",
        "description": "ID of the content to schedule"
      },
      "platform": {
        "type": "string",
        "enum": ["twitter", "instagram", "facebook", "blog", "newsletter"],
        "description": "Target platform"
      },
      "scheduled_for": {
        "type": "string",
        "description": "ISO 8601 timestamp for publication"
      }
    },
    "required": ["content_id", "platform", "scheduled_for"]
  }
}
