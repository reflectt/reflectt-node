{
  "id": "upsert_agent_prompt",
  "name": "Upsert Agent Prompt",
  "description": "Create or update the prompt file for a specific agent",
  "category": "agent",
  "function_name": "upsert_agent_prompt",
  "parameters": {
    "type": "object",
    "properties": {
      "agent_id": {
        "type": "string",
        "description": "The agent ID (e.g., 'market_researcher')"
      },
      "category": {
        "type": "string",
        "description": "The agent category (e.g., 'research', 'intelligence')"
      },
      "prompt": {
        "type": "string",
        "description": "The prompt content in markdown format"
      },
      "scope": {
        "type": "string",
        "enum": [
          "global",
          "space"
        ],
        "description": "Whether to update global agent or space agent",
        "default": "global"
      },
      "target_space": {
        "type": "string",
        "description": "Optional: Write to a specific named space (e.g., 'creative', 'education'). Overrides current space."
      }
    },
    "required": [
      "agent_id",
      "category",
      "prompt"
    ]
  },
  "use_tool_context": true,
  "examples": [],
  "tags": [],
  "version": "1.0.0",
  "dependencies": []
}